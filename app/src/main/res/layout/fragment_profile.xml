<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.andrewogren.pottytalk.ProfileFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Profile Info"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fullName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:text=""
            />
        <Button
            android:id="@+id/editName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:background="@color/colorClear"
            android:layout_alignParentRight="true"
            android:shadowColor="@color/colorClear"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/schoolName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:text=""
            />
        <Button
            android:id="@+id/editSchool"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:background="@color/colorClear"
            android:layout_alignParentRight="true"
            android:shadowColor="@color/colorClear"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Followed Toilets"
        android:textAlignment="center"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
